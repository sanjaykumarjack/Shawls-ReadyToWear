@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background: linear-gradient(135deg, #667eea, #764ba2); /* Add gradient background */
            color: #fff; /* Set text color to contrast with background */
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            text-align: center;
            background-color: rgba(0, 0, 0, 0.7); /* Add a semi-transparent black background for better readability */
            border-radius: 10px; /* Add border-radius for container */
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.3); /* Add a shadow for container */
        }

        .display-4 {
            font-size: 3rem;
            color: #fff; /* Set heading color to contrast with background */
            margin-bottom: 20px; /* Add some space below heading */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Add text shadow for better visibility */
        }

        img {
            max-width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.3); /* Add a light shadow for images */
            margin-bottom: 20px;
        }

        p {
            font-size: 1.1rem;
            color: #ddd; /* Set paragraph text color */
            margin-bottom: 20px; /* Add some space below paragraphs */
        }

        a {
            color: #00bfff; /* Set link color */
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>

    <div class="container">
        <h1 class="display-4">Welcome</h1>
       
